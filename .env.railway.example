# Railway Environment Variables for PJe API
# Copy these to your Railway project dashboard

# Server Configuration
NODE_ENV=production
PORT=3001

# PJe Database Configuration - 1st Degree
PJE_DB_HOST_1GRAU=pje-dbpr-a1-replica
PJE_DB_PORT_1GRAU=5432
PJE_DB_NAME_1GRAU=pje
PJE_DB_USER_1GRAU=your_username
PJE_DB_PASSWORD_1GRAU=your_password

# PJe Database Configuration - 2nd Degree  
PJE_DB_HOST_2GRAU=pje-dbpr-a2-replica
PJE_DB_PORT_2GRAU=5432
PJE_DB_NAME_2GRAU=pje
PJE_DB_USER_2GRAU=your_username
PJE_DB_PASSWORD_2GRAU=your_password

# SSL Configuration (if required)
PJE_DB_SSL=true
PJE_DB_SSL_REJECT_UNAUTHORIZED=false

# Connection Pool Settings
PJE_DB_MAX_CONNECTIONS=20
PJE_DB_IDLE_TIMEOUT=30000
PJE_DB_CONNECTION_TIMEOUT=60000